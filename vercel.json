{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/robots.txt",
            "headers": [
                { "key": "Content-Type", "value": "text/plain" }
            ]
        },
        {
            "source": "/sitemap.xml",
            "headers": [
                { "key": "Content-Type", "value": "application/xml" }
            ]
        }
    ],
    "crons": [
        {
            "path": "/api/agent/run",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/web3-news/refresh",
            "schedule": "15 */6 * * *"
        }
    ],
    "functions": {
        "api/index.js": {
            "maxDuration": 120
        }
    }
}
