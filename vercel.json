{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/agent/run",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/web3-news/refresh",
            "schedule": "15 */6 * * *"
        }
    ],
    "functions": {
        "api/index.js": {
            "maxDuration": 120
        }
    }
}
