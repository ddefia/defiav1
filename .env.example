# ==============================================
# DEFIA Studio - Environment Variables
# Copy this file to .env and fill in your values
# ==============================================

# ==================== REQUIRED ====================
# These MUST be set for the app to function

# --- Google Gemini AI ---
# Powers all AI features: content generation, strategy, chat, brand research
GEMINI_API_KEY=your_gemini_key_here
VITE_GEMINI_API_KEY=your_gemini_key_here

# --- Supabase ---
# Database, authentication, and file storage
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# --- Frontend / Deployment ---
FRONTEND_URL=https://your-domain.vercel.app
VITE_API_BASE_URL=
NODE_ENV=production

# ==================== OPTIONAL ====================
# These add features but the app works without them

# --- Apify (Social Metrics, Deep Crawl, News, Twitter Scraping) ---
# Get from: https://console.apify.com/account/integrations
# Unlocks: live social metrics, tweet/image scraping, deep website crawl, web3 news
APIFY_API_TOKEN=your_apify_token_here
VITE_APIFY_API_TOKEN=your_apify_token_here

# --- X / Twitter OAuth 2.0 (User Connection) ---
# Lets users connect their X account via "Connect X" button
# Get from: https://developer.x.com → Your App → OAuth 2.0 settings
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret
X_REDIRECT_URI=https://your-domain.com/api/auth/x/callback
X_OAUTH_STATE_SECRET=your_random_state_secret_32chars_min
X_BEARER_TOKEN=your_x_bearer_token

# --- X / Twitter OAuth 1.1 (App-Only Publishing) ---
# Required for the publishing scheduler to post tweets
# Get from: https://developer.x.com → Your App → Keys and Tokens
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_SECRET=your_x_access_secret

# --- Stripe Billing ---
# Payment processing and subscription management
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_STARTER_PRICE_ID=price_your_starter_price_id
STRIPE_GROWTH_PRICE_ID=price_your_growth_price_id
VITE_STRIPE_STARTER_PRICE_ID=price_your_starter_price_id
VITE_STRIPE_GROWTH_PRICE_ID=price_your_growth_price_id

# --- Google Vertex AI (Server-Side Image Generation) ---
# Base64-encoded service account JSON with Vertex AI permissions
GOOGLE_SERVICE_ACCOUNT_JSON=

# --- Dune Analytics (On-Chain Data) ---
# Get from: https://dune.com → Settings → API
# Only needed if brand has smart contracts configured
DUNE_API_KEY=your_dune_api_key_here

# --- LunarCrush (Creator Metrics) ---
# Low priority — trends now come from Web3 News
LUNARCRUSH_API_KEY=your_lunarcrush_api_key_here

# --- Brand Collector (External Analysis Service) ---
VITE_BRAND_COLLECTOR_BASE_URL=

# --- Internal API Keys (format: key:ownerId,key2:ownerId2) ---
DEFIA_API_KEYS=
